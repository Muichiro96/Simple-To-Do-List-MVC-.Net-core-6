@model todolist.Class.Feries

@{
    ViewData["Title"] = "Index";
}




<div>
    <h4>Holidays</h4>
   
       
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Les jours feries</h3>
                        
                    </div>

                    <div class="card-body table-responsive p-0">
                        <table class="table table-hover text-nowrap">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Date</th>


                                    <th>Country</th>

                                    <th>Weekday (Date)</th>
                                    <th>Weekday (numeric)</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var holiday in Model.Holidays)
                                {
                                    <tr>
                                        <td>@holiday.name</td>
                                        <td>@holiday.date</td>


                                        <td>@holiday.country</td>

                                        <td>@holiday.weekday[holiday.weekday.Keys.ElementAt(0)].name</td>
                                        <td>@holiday.weekday[holiday.weekday.Keys.ElementAt(0)].numeric</td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                </div>

            </div>
        </div>
    </table></div>
</div>


